<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:CMSL.UI.ViewModels.Pages.ServerPanel"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignWidth="800" 
             d:DesignHeight="600"
             x:Class="CMSL.UI.Views.Pages.ServerPanel.TerminalPageView"
             x:DataType="vm:TerminalPageViewModel">
    <Design.DataContext>
        <vm:TerminalPageViewModel/>
    </Design.DataContext>
    
    <Grid Name="MainGrid"
          ColumnDefinitions="*, Auto, Auto"
          RowDefinitions="*, Auto"
          Margin="5">
        <TextBox Grid.Column="0"
                 Grid.Row="0"
                 Grid.ColumnSpan="3"
                 Name="ServerOutput"
                 Margin="0 0 0 5"
                 BorderThickness="0"
                 CornerRadius="0"
                 IsReadOnly="True" 
                 Watermark="Server log"
                 Text="{Binding Log}"/>
        
        <TextBox Grid.Column="0" 
                 Grid.Row="1" 
                 Watermark="Enter command"/>
        
        <Button Grid.Column="1"
                Grid.Row="1">
            <TextBlock Text="Send"/>
        </Button>
        
        <Button Grid.Column="2"
                Grid.Row="1">
            <TextBlock Text="Close Server"/>
        </Button>
    </Grid>
</UserControl>
